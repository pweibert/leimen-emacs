import React from 'react';

interface PaginationProps {
  totalElements: number;
  pageSize: number;
  currentElement: number;
  onPageChange: (page: number) => void;
}

function DbPaginator({ totalElements, pageSize, currentElement, onPageChange }: PaginationProps) {
  const totalPages = Math.ceil(totalElements / pageSize);
  const currentPage = Math.ceil(currentElement / pageSize);
  const pageNumbers = [];

  for (let i = 1; i <= totalPages; i++) {
    pageNumbers.push(i);
  }

  return (
    <div>
      <nav>
        <ul className="pagination">
          {pageNumbers.map((page) => (
            <li key={page} className={`page-item ${currentPage === page ? 'active' : ''}`}>
              <button className="page-link" onClick={() => onPageChange((page - 1) * pageSize)}>
                {page}
              </button>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  );
}

export default DbPaginator;
